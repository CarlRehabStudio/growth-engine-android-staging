<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/medium_margin"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/page_content"
        app:cardUseCompatPadding="false"
        android:layout_width="@dimen/practice_swipe_selector_page_width"
        android:layout_height="@dimen/practice_swipe_selector_page_height"
        app:cardPreventCornerOverlap="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/page_image"
            tools:background="@color/red"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:layout_width="@dimen/practice_swipe_selector_page_circle_size"
            android:layout_height="@dimen/practice_swipe_selector_page_circle_size"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/medium_margin">

            <ImageView
                android:id="@+id/page_indicator_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle"/>

            <TextView
                android:id="@+id/page_indicator_text"
                style="@style/FontH5medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:textColor="@color/white"
                tools:text="1"/>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>