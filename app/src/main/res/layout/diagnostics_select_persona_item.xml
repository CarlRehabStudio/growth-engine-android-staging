<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/diagnostics_step_two_min_height_item"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/diagnostics_step_two_image_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:minWidth="@dimen/diagnostics_step_two_image_width_item"
                android:padding="@dimen/small_margin"
                android:scaleType="centerInside"
                tools:background="#01bbd4"
                tools:src="@drawable/ilu_diagnostic_2_1"/>

            <TextView
                android:id="@+id/diagnostics_step_two_text_item"
                style="@style/FontH5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical|start"
                android:paddingLeft="@dimen/medium_margin"
                android:paddingRight="@dimen/medium_margin"
                tools:text="Create a learning plan based on your goals and continue on to e"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>