<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/medium_margin">

    <com.google.android.apps.miyagi.development.ui.components.widget.BadgeView
        android:id="@+id/item_statistics_badge_image"
        android:layout_width="@dimen/statistics_badge_size"
        android:layout_height="@dimen/statistics_badge_size"
        android:layout_gravity="center"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/item_statistics_badge_text"
        style="@style/FontCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_12"
        android:textAlignment="center"
        tools:text="@string/lorem_short_label"/>
</LinearLayout>