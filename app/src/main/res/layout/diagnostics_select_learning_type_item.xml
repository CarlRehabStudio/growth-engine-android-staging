<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:foreground="?selectableItemBackground"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/diagnostics_step_two_min_height_item"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/diagnostics_select_learning_type_item_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:paddingBottom="@dimen/diagnostics_step_one_image_vertical_padding_item"
                android:paddingTop="@dimen/diagnostics_step_one_image_vertical_padding_item"
                android:scaleType="centerInside"
                tools:background="#57bef9"
                tools:src="@drawable/ilu_diagnostic_1_1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/diagnostics_step_two_text_column_weight"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/medium_margin"
                android:paddingRight="@dimen/medium_margin">

                <TextView
                    android:id="@+id/diagnostics_select_learning_type_item_title"
                    style="@style/FontH5medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/diagnostics_step_one_text_vertical_padding"
                    tools:text="Complete all 23 topics"/>

                <TextView
                    android:id="@+id/diagnostics_select_learning_type_item_description"
                    style="@style/FontH5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/diagnostics_step_one_text_vertical_padding"
                    tools:text="Jump right in and complete all 23 topics to earn a Digital Marketing certificate from Google"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>