<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/tag_cloud_item_card"
        android:layout_width="@dimen/practice_activity_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foreground="?attr/selectableItemBackground"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/medium2_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:background="@color/black_12">

            <TextView
                android:id="@+id/tag_cloud_item_label"
                style="@style/FontH5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/medium_margin"
                android:layout_weight="1"
                android:padding="0dp"/>

            <ImageView
                android:id="@+id/tag_cloud_item_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>